<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <div class="item">
      <!-- Exibe a primeira imagem do item, se houver -->
      <% if item.images.attached? %>
        <%= image_tag item.images[0], size: "300x300", class: "item-image" %>
      <% else %>
        <p>No image available</p>
      <% end %>

      <!-- Exibe o nome do item -->
      <h2><%= item.name %></h2>
      
      <!-- Exibe a descrição do item -->
      <p><strong>Description:</strong> <%= item.description %></p>
      
      <!-- Exibe o preço de venda do item -->
      <p><strong>Sale Price:</strong> <%= number_to_currency(item.sale_price) %></p>
      
      <!-- Exibe o status do item -->
      <p><strong>Status:</strong> <%= item.status %></p>

      <!-- Link para visualizar o item -->
      <p>
        <%= link_to "Show this item", item %>
      </p>
    </div>
  <% end %>
</div>

<!-- Link para criar um novo item -->
<%= link_to "New item", new_item_path %>

